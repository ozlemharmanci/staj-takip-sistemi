@model List<Staj>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Öğrenci Paneli";
}

<!-- Reddedilme bildirimi -->
@if (ViewBag.ReddedilmeUyarisi != null)
{
    <div id="reddedilmeUyarisi" class="alert alert-danger alert-dismissible fade show" role="alert">
        <h5><i class="fas fa-exclamation-triangle me-2"></i>Reddedilen Staj Talepleriniz</h5>
        <hr>
        @Html.Raw(ViewBag.ReddedilmeUyarisi)
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <div class="mt-2">
            <button id="bildirimleriTemizleBtn" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-check me-1"></i>Bildirimleri Temizle
            </button>
        </div>
    </div>
}

<!-- Başarı mesajları -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-graduate me-2"></i>Öğrenci Paneli</h2>
    <a href="@Url.Action("StajTalebi")" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Yeni Staj Talebi
    </a>
</div>

<div class="card shadow">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Stajlarım</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Firma</th>
                            <th>Başlangıç Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Toplam Gün</th>
                            <th>Ders</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staj in Model)
                        {
                            <tr>
                                <td>@staj.Firma</td>
                                <td>@staj.BaslangicTarihi.ToShortDateString()</td>
                                <td>@staj.BitisTarihi.ToShortDateString()</td>
                                <td>@staj.ToplamGunSayisi gün</td>
                                <td>@staj.Ders</td>
                                <td>
                                    <span class="badge @(staj.OnaylandiMi ? "bg-success" : "bg-warning")">
                                        @(staj.OnaylandiMi ? "Onaylandı" : "Beklemede")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        @if (string.IsNullOrEmpty(staj.DosyaYolu))
                                        {
                                            <a href="@Url.Action("BelgeYukle", new { id = staj.Id })"
                                               class="btn btn-sm btn-outline-primary mb-1">
                                                <i class="fas fa-upload me-1"></i>Belge Yükle
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("BelgeGoruntule", new { id = staj.Id })"
                                               class="btn btn-sm btn-outline-info mb-1" target="_blank">
                                                <i class="fas fa-eye me-1"></i>Belgeyi Görüntüle
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i>Henüz staj kaydınız bulunmamaktadır.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Alert'leri otomatik kapat
        setTimeout(function () {
            $('.alert').alert('close');
        }, 10000);

        // Bildirimleri temizle butonu
        document.getElementById('bildirimleriTemizleBtn')?.addEventListener('click', function () {
            fetch('@Url.Action("BildirimleriTemizle", "Student")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Bildirim kutusunu kaldır
                        document.getElementById('reddedilmeUyarisi').remove();

                        // Başarı mesajı göster
                        const successAlert = document.createElement('div');
                        successAlert.className = 'alert alert-success alert-dismissible fade show';
                        successAlert.innerHTML = `
                                <i class="fas fa-check-circle me-2"></i>${data.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            `;
                        document.querySelector('main').insertBefore(successAlert, document.querySelector('main').firstChild);

                        // Başarı mesajını 5 saniye sonra otomatik kapat
                        setTimeout(() => {
                            successAlert.remove();
                        }, 5000);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });
    </script>
}