@model Staj
@{
    Layout = "_Layout";
    ViewData["Title"] = "Belge Yükle";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white text-center">
                <h4><i class="fas fa-file-upload me-2"></i>Belge Yükle</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Firma:</label>
                    <input type="text" class="form-control" value="@Model.Firma" readonly>
                </div>

                <div class="mb-3">
                    <label class="form-label">Dönem:</label>
                    <input type="text" class="form-control" value="@Model.StajDonemi" readonly>
                </div>

                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="file" class="form-label">Staj Belgesi (PDF)</label>
                        <input type="file" class="form-control" name="file" accept=".pdf" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload me-2"></i>Yükle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>