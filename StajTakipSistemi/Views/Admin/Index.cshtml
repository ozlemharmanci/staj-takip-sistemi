@model List<Staj>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Paneli";
}

<h2 class="mb-4"><i class="fas fa-cog me-2"></i>Admin Paneli</h2>

<!-- Bildirim Mesajları -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <span class="badge bg-primary">@Model.Count aktif staj kaydı</span>
    <a href="@Url.Action("SilinenKayitlar")" class="btn btn-outline-secondary btn-sm">
        <i class="fas fa-trash me-1"></i>Silinen Kayıtlar
    </a>
</div>

<div class="card shadow">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Tüm Staj Talepleri</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Öğrenci</th>
                            <th>Firma</th>
                            <th>Dönem</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Gün</th>
                            <th>Ders</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staj in Model)
                        {
                            <tr>
                                <td>@staj.OgrenciEmail</td>
                                <td>@staj.Firma</td>
                                <td>@staj.StajDonemi</td>
                                <td>@staj.BaslangicTarihi.ToShortDateString()</td>
                                <td>@staj.BitisTarihi.ToShortDateString()</td>
                                <td>@staj.ToplamGunSayisi gün</td>
                                <td>@staj.Ders</td>
                                <td>
                                    <span class="badge @(staj.OnaylandiMi ? "bg-success" : "bg-danger")">
                                        @(staj.OnaylandiMi ? "Onaylandı" : "Onay Bekliyor")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        @if (!string.IsNullOrEmpty(staj.DosyaYolu))
                                        {
                                            <a href="@Url.Action("BelgeGoruntule", new { id = staj.Id })"
                                               class="btn btn-sm btn-outline-info mb-1" target="_blank">
                                                <i class="fas fa-eye me-1"></i>Belgeyi Görüntüle
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small mb-1">Belge yüklenmemiş</span>
                                        }

                                        @if (!staj.OnaylandiMi)
                                        {
                                            <div class="d-flex gap-1">
                                                <a href="@Url.Action("Onayla", new { id = staj.Id })"
                                                   class="btn btn-sm btn-success mb-1">
                                                    <i class="fas fa-check me-1"></i>Onayla
                                                </a>
                                                <a href="#" class="btn btn-sm btn-danger mb-1"
                                                   data-bs-toggle="modal" data-bs-target="#reddetModal"
                                                   data-staj-id="@staj.Id">
                                                    <i class="fas fa-times me-1"></i>Reddet
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-success small">
                                                <i class="fas fa-check-circle me-1"></i>Onaylandı
                                            </span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i>Henüz staj kaydı bulunmamaktadır.
            </div>
        }
    </div>
</div>

<!-- Reddetme Modal -->
<div class="modal fade" id="reddetModal" tabindex="-1" aria-labelledby="reddetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reddetModalLabel">Staj Talebini Reddet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="reddetForm" action="@Url.Action("Reddet", "Admin")" method="post">
                <div class="modal-body">
                    <input type="hidden" id="reddetId" name="id" />
                    <div class="mb-3">
                        <label for="silmeNedeni" class="form-label">Reddetme Nedeni:</label>
                        <textarea class="form-control" id="silmeNedeni" name="silmeNedeni" rows="3" required
                                  placeholder="Reddetme nedenini açıklayın..."></textarea>
                        <div class="form-text">Bu neden öğrenciye gösterilecektir.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Reddet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reddetme modalını açınca staj ID'sini forma ekle
        var reddetModal = document.getElementById('reddetModal');
        reddetModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var stajId = button.getAttribute('data-staj-id');
            var modal = this;
            modal.querySelector('#reddetId').value = stajId;
        });

        // Alert'leri otomatik kapat
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}