@model List<Staj>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Silinen Kayıtlar";
}

<h2 class="mb-4"><i class="fas fa-trash me-2"></i>Silinen Kayıtlar</h2>

<!-- Bildirim Mesajları -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <span class="badge bg-secondary">@Model.Count silinmiş kayıt</span>
    <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
        <i class="fas fa-arrow-left me-1"></i>Ana Sayfa
    </a>
</div>

<div class="card shadow">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0"><i class="fas fa-history me-2"></i>Silinen Staj Kayıtları</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Öğrenci</th>
                            <th>Firma</th>
                            <th>Dönem</th>
                            <th>Silen</th>
                            <th>Silinme Tarihi</th>
                            <th>Silme Nedeni</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staj in Model)
                        {
                            <tr>
                                <td>@staj.OgrenciEmail</td>
                                <td>@staj.Firma</td>
                                <td>@staj.StajDonemi</td>
                                <td>@staj.SilenKullanici</td>
                                <td>@staj.SilmeTarihi?.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@staj.SilmeNedeni</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="@Url.Action("GeriAl", new { id = staj.Id })"
                                           class="btn btn-sm btn-success"
                                           onclick="return confirm('Bu kaydı geri almak istediğinize emin misiniz?')">
                                            <i class="fas fa-undo me-1"></i>Geri Al
                                        </a>
                                        <a href="@Url.Action("KaliciSil", new { id = staj.Id })"
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Bu kaydı kalıcı olarak silmek istediğinize emin misiniz? Bu işlem geri alınamaz!')">
                                            <i class="fas fa-trash-alt me-1"></i>Kalıcı Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i>Silinmiş kayıt bulunmamaktadır.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Alert'leri otomatik kapat
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}